<eon w="100%" h="100%" id="canvas01">
	<rect x="0" y="0" w="100%" h="100%" color="white"/>
	<rect x="20%" y="50%" w="20%" h="20%" color="0xaaaa0000">
		<anim name="y" begin="#anim01.start" repeat="-1">
			<key value="50%" start="0" calc="0"/>
			<key value="0%" start="1s" calc="0"/>
		</anim>
		<anim name="w" begin="#anim01.start" repeat="-1">
			<key value="20%" start="0" calc="0"/>
			<key value="50%" start="0.4s" calc="0"/>
		</anim>
		<anim name="h" dur="0.4s" begin="#anim01.start" repeat="-1">
			<key value="20%" start="0" calc="0"/>
			<key value="50%" start="0.4s" calc="0"/>
		</anim>
		<anim name="x" begin="#anim01.start" repeat="-1">
			<key value="20%" start="0" calc="0"/>
			<key value="5%" start="0.4s" calc="0"/>
		</anim>
		<anim name="color" begin="#anim01.start" repeat="-1">
			<key value="0xaaaa0000" start="0" calc="0"/>
			<key value="0x00000000" start="0.4s" calc="0"/>
		</anim>
	</rect>
	<rect x="20%" y="50%" w="20%" h="20%" color="red">
		<anim id="anim01" name="y" begin="click" repeat="-1">
			<key value="50%" start="0" calc="0"/>
			<key value="0%" start="1s" calc="0"/>
		</anim>
	</rect>
	<rect x="60%" y="50%" w="20%" h="20%" color="red">
		<anim id="anim05" name="y" begin="click" repeat="1">
			<key value="50%" start="0" calc="0"/>
			<key value="0%" start="1s" calc="0"/>
		</anim>
		<anim id="anim06" name="color" begin="#anim05.start" repeat="-1">
			<key value="red" start="0" calc="0"/>
			<key value="0xaaaaaaaa" start="5s" calc="0"/>
		</anim>
	</rect>
</eon>
